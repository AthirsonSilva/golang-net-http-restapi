{{template "admin" .}}

{{define "page-title"}}
    Dashboard
{{end}}

{{define "content"}}
    <div class="col-md-12">
        <div class="text-center">
            <h3>{{index .DateMap "this_month"}} {{index .DateMap "this_year"}}</h3>
        </div>

        <div class="float-start">
            <a class="btn btn-sm btn-outline-secondary" 
                href="/admin/reservations/calendar?y={{index .DateMap "last_month_year"}}&m={{index .DateMap "last_month"}}" >           
                &lt;&lt;
            </a>
        </div>

        <div class="float-end">
            <a class="btn btn-sm btn-outline-secondary" 
                href="/admin/reservations/calendar?y={{index .DateMap "next_month_year"}}&m={{index .DateMap "next_month"}}" >           
                &gt;&gt;
            </a>
        </div>


        <div class="clearfix"></div>
    </div>
{{end}}
