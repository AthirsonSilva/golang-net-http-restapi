{{template "base" .}}

{{define "content"}}
<div class="container">
  <div class="row">
    <div class="col">
      <h1 class="mt-3">Choose a Room</h1>
      {{$rooms := index .Data "rooms"}}
      <hr>
      <ul>
        {{range $rooms}}
        <li class="list-group-item">
          <h5>{{.RoomName}}</h5>
          <a href="/choose-room/{{.ID}}" class="btn btn-primary btn-large">Choose</a>
        </li>
        {{end}}
      </ul>
    </div>
  </div>
</div>
{{end}}