{{template "base" .}}

{{define "content"}}
<div class="container">
    <div class="row">
        <div class="col">
            {{$res := index .Data "reservation"}}
            <h1 class="mt-3">Make Reservation</h1>
            <hr>
            <p>{{$res.Room.Name}}</p>
            <hr>
            <form method="POST" action="/make-reservation">
                <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
                <input type="hidden" name="start_date" value="{{index .DateMap "start_date"}}">
                <input type="hidden" name="end_date" value="{{index .DateMap "end_date"}}">
                <input type="hidden" name="room_id" value="{{$res.RoomID}}">
                <input type="hidden" name="user_id" value="{{$res.UserID}}">

                <h1>Do you want to make this reservation?</h1>
                <input type="submit" class="btn btn-primary" value="Make Reservation">
            </form>
        </div>
    </div>

</div>
{{end}}